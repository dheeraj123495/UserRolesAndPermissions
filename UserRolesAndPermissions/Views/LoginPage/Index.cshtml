@model UserRolesAndPermissions.Models.LoginModel;


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Login</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4">
            <div class="col-md-12">
                <form class="row" method="post">
                    <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">Create a new account.</h3>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-floating mb-3 col-md-12">
                        <input asp-for="Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Email" class="ms-2 text-muted">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-12">
                        <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Password" class="ms-2 text-muted">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-danger form-control">Login</button>
                    </div>
                    <div class="col col-12 mt-2">
                        <p class="text-black text-center fw-bolder h3">Dont Have Account?</p>
                        <a asp-controller="LoginPage" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Register
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}